<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.peoit.android.online.pschool.ui.activity.GradeInfoActivity">

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/layout_m8dp"
        android:paddingRight="@dimen/layout_m8dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white_">

        <EditText
            android:id="@+id/et_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size16"
            android:singleLine="true"
            android:background="@drawable/query_grade_scan_bg_sel"/>

        <View
            android:layout_width="@dimen/layout_m16dp"
            android:layout_height="@dimen/layout_m1dp"
            android:background="@color/md_grey_500"
            android:layout_marginLeft="@dimen/layout_m4dp"
            android:layout_marginRight="@dimen/layout_m4dp"/>

        <EditText
            android:id="@+id/et_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size16"
            android:singleLine="true"
            android:background="@drawable/query_grade_scan_bg_sel"/>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size16"
            android:textColor="@color/search_color"
            android:text="查询"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:layout_marginRight="@dimen/layout_m8dp"/>

    </LinearLayout>

    <include
        android:layout_below="@+id/search"
        layout="@layout/act_pulllist_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</RelativeLayout>
