<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_m24dp"
        android:background="@color/white_"
        android:orientation="vertical"
        android:paddingBottom="@dimen/layout_m16dp"
        android:paddingTop="@dimen/layout_m16dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_oldpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_m16dp"
                android:layout_marginRight="@dimen/layout_m16dp"
                android:layout_weight="1"
                app:hintTextAppearance="@style/float_text">

                <EditText
                    android:id="@+id/et_oldpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/layout_m16dp"
                    android:drawableRight="@drawable/ic_clear"
                    android:hint="输入旧密码"
                    android:password="true"
                    android:textColor="@color/black_"
                    android:textSize="@dimen/text_size16"
                    android:paddingLeft="@dimen/layout_m8dp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_newpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_m16dp"
                android:layout_marginRight="@dimen/layout_m16dp"
                android:layout_weight="1"
                app:hintTextAppearance="@style/float_text">

                <EditText
                    android:id="@+id/et_newpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/layout_m16dp"
                    android:drawableRight="@drawable/ic_clear"
                    android:hint="输入新密码"
                    android:password="true"
                    android:textColor="@color/black_"
                    android:textSize="@dimen/text_size16"
                    android:paddingLeft="@dimen/layout_m8dp"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_repass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_m16dp"
                android:layout_marginRight="@dimen/layout_m16dp"
                android:layout_weight="1"
                app:hintTextAppearance="@style/float_text">

                <EditText
                    android:id="@+id/et_repass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/layout_m16dp"
                    android:drawableRight="@drawable/ic_clear"
                    android:hint="确认新密码"
                    android:password="true"
                    android:textColor="@color/black_"
                    android:textSize="@dimen/text_size16"
                    android:paddingLeft="@dimen/layout_m8dp"/>

            </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_m48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/changepassword_et4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="输入绑定手机号获取验证码"
                android:lines="1"
                android:numeric="integer"
                android:padding="12dp"
                android:textColor="@color/black_" />

            <TextView
                android:id="@+id/changepassword_tv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_blue"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="发送验证码"
                android:textColor="@color/white_" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_m48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/changepassword_et5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="输入手机验证码"
                android:lines="1"
                android:numeric="integer"
                android:padding="12dp"
                android:textColor="@color/black_" />

            <ImageView
                android:id="@+id/changepassword_iv4"
                android:layout_width="@dimen/layout_m24dp"
                android:layout_height="@dimen/layout_m24dp"
                android:layout_marginRight="@dimen/layout_m16dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:src="@mipmap/delete" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/layout_m16dp"
        android:drawableLeft="@drawable/check_sel"
        android:drawablePadding="@dimen/layout_m16dp"
        android:gravity="center_vertical"
        android:text="显示密码"
        android:textColor="@color/black_2"
        android:textSize="@dimen/text_size16" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/layout_m16dp"
        android:layout_marginRight="@dimen/layout_m16dp"
        android:background="@drawable/query_grade_search_bg_sel"
        android:gravity="center"
        android:padding="8dp"
        android:text="确认提交"
        android:textColor="@color/white_"
        android:textSize="18dp" />

</LinearLayout>
