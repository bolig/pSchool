<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/layout_m16dp"
    android:paddingRight="@dimen/layout_m16dp"
    android:background="@color/white_1"
    tools:context="com.peoit.android.online.pschool.ui.activity.AddQActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="对什么的提问"
        android:textColor="@color/black_3"
        android:layout_marginTop="@dimen/layout_m16dp"
        android:textSize="@dimen/text_size16"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_m1dp"
        android:background="@color/md_grey_300"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/layout_m7dp"
        android:layout_marginBottom="@dimen/layout_m8dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_oldpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/line">

        <EditText
            android:id="@+id/et_oldpass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="@dimen/layout_m16dp"
            android:textColorHint="@color/md_green_500"
            android:textColor="@color/black_2"
            android:textSize="@dimen/text_size16"
            android:paddingLeft="@dimen/layout_m8dp"
            android:gravity="top"
            android:hint="请输入提问内容"
            android:maxEms="1000"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/input_oldpass"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/layout_m16dp">

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/error_text"
            android:text="0/1000"
            android:gravity="right"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:layout_marginRight="@dimen/layout_m8dp"/>

    </LinearLayout>

</RelativeLayout>
