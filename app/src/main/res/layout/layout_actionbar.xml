<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actionbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_h"
    android:background="@color/md_blue_500"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <com.andexert.library.RippleView
        android:id="@+id/action_l"
        android:layout_width="@dimen/actionbar_h"
        android:layout_height="@dimen/actionbar_h"
        android:layout_alignParentLeft="true"
        ripple:rv_type="doubleRipple"
        ripple:rv_centered="true">

        <ImageView
            android:id="@+id/action_il"
            android:layout_width="@dimen/actionbar_h"
            android:layout_height="@dimen/actionbar_h"
            android:layout_gravity="center"
            android:background="@color/md_blue_500"
            android:scaleType="centerInside"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />
    </com.andexert.library.RippleView>

    <TextView
        android:id="@+id/action_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <com.andexert.library.RippleView
        android:id="@+id/action_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        ripple:rv_type="doubleRipple"
        ripple:rv_centered="true">

        <ImageView
            android:id="@+id/action_ir"
            android:layout_width="@dimen/actionbar_h"
            android:layout_height="@dimen/actionbar_h"
            android:layout_gravity="center"
            android:background="@color/md_blue_500"
            android:scaleType="centerInside"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />
    </com.andexert.library.RippleView>

    <TextView
        android:id="@+id/actionbar_rtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:text="编辑"
        android:layout_centerVertical="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:maxEms="4"
        android:maxLines="1"
        android:background="@drawable/actionbar_rtext_sel"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
