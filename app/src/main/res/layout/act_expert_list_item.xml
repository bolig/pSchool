<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/layout_m4dp"
        android:paddingBottom="@dimen/layout_m4dp"
        android:paddingLeft="@dimen/layout_m4dp"
        android:paddingRight="@dimen/layout_m4dp"
        android:background="@drawable/list_item_sel">

        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user_avater"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="111"
            android:textSize="@dimen/text_size14"
            android:textColor="@color/md_orange_500"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/layout_m16dp"/>

    </RelativeLayout>

    <View
        android:layout_width="@dimen/layout_m1dp"
        android:layout_height="match_parent"
        android:background="@color/md_grey_200"></View>

    <RelativeLayout
        android:id="@+id/rl_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/layout_m4dp"
        android:paddingBottom="@dimen/layout_m4dp"
        android:paddingLeft="@dimen/layout_m4dp"
        android:paddingRight="@dimen/layout_m4dp"
        android:background="@drawable/list_item_sel">

        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user_avater"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="111"
            android:textSize="@dimen/text_size14"
            android:textColor="@color/md_orange_500"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/layout_m16dp"/>

    </RelativeLayout>

</LinearLayout>
