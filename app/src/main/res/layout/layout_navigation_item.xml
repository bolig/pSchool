<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white_">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/layout_m24dp"
        android:layout_height="@dimen/layout_m24dp"
        android:layout_marginTop="@dimen/layout_m12dp"
        android:layout_marginBottom="@dimen/layout_m12dp"
        android:layout_marginLeft="@dimen/layout_m16dp"
        android:src="@mipmap/lefephoneimage"
        android:layout_marginRight="@dimen/layout_m8dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/text_size16"
        android:text="111"
        android:layout_marginLeft="@dimen/layout_m8dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/layout_m16dp"
        android:textColor="@color/black_1"/>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/layout_m24dp"
        android:layout_height="@dimen/layout_m24dp"
        android:layout_marginTop="@dimen/layout_m12dp"
        android:layout_marginBottom="@dimen/layout_m12dp"
        android:src="@drawable/ic_arrow_right"
        android:layout_marginRight="@dimen/layout_m16dp"/>

</LinearLayout>
