<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_blue_500</item>
        <item name="colorPrimaryDark">@color/md_light_blue_400</item>
        <item name="colorAccent">@color/md_cyan_500</item>
        <item name="android:windowBackground">@color/md_grey_300</item>
    </style>

    <style name="act_img_brows" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="dialog" parent="AppTheme">
        <item name="android:windowBackground">@color/black_3</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="wel_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#000</item>
    </style>

    <style name="float_text">
        <item name="android:textColor">@color/md_green_500</item>
        <item name="android:textSize">@dimen/text_size12</item>
    </style>

    <style name="float_text14">
        <item name="android:textColor">@color/md_green_500</item>
        <item name="android:textSize">@dimen/text_size14</item>
    </style>

    <style name="error_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_float_text</item>
    </style>

    <style name="list_item_header_text">
        <item name="android:textSize">@dimen/text_size14</item>
        <item name="android:textColor">@color/white_1</item>
    </style>
    <style name="list_item_b">
        <item name="android:textSize">@dimen/text_size14</item>
        <item name="android:textColor">@color/black_1</item>
    </style>
    <style name="list_item_b12">
        <item name="android:textSize">@dimen/text_size12</item>
        <item name="android:textColor">@color/black_1</item>
    </style>

    <style name="check_in_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black_3</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_m48dp</item>
        <item name="android:paddingLeft">@dimen/layout_m16dp</item>
        <item name="android:paddingRight">@dimen/layout_m16dp</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
